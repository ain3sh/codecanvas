{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python -c \"from codecanvas.hooks.session_init import main; main()\"",
            "timeout": 60
          }
        ]
      }
    ],
    "PostToolUse": [
